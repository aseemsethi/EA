<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ea.start_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/table_layout_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ECEFF1"
            android:padding="0dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/table_layout_admin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/table_layout_users_row_buttonA"
                    android:layout_width="0dip"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_admin"
                    android:layout_marginRight="10dp"
                    android:text="Users" />

                <Button
                    android:id="@+id/table_layout_orders_row_buttonA"
                    android:layout_width="0dip"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_admin"
                    android:layout_marginRight="10dp"
                    android:text="Orders" />

                <Button
                    android:id="@+id/table_layout_clear_row_buttonA"
                    android:layout_width="0dip"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_admin"
                    android:text="Clear" />
            </TableRow>
            <View android:layout_height="5dp" />
            <TableRow
                android:id="@+id/table_layout_row_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/table_layout_save_row_buttonA"
                    android:layout_width="0dip"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_admin"
                    android:layout_marginRight="10dp"
                    android:text="Save" />
                <Button
                    android:id="@+id/table_layout_search_row_buttonA"
                    android:layout_width="0dip"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_admin"
                    android:layout_marginRight="10dp"
                    android:text="Search" />
                <Button
                    android:id="@+id/table_layout_contact_row_buttonA"
                    android:layout_width="0dip"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_admin"
                    android:text="Contact" />
            </TableRow>
            <View android:layout_height="5dp" />
            <View
                android:layout_height="5dp"
                android:background="@color/colorPrimary" />
        </TableLayout>
    </ScrollView>
</LinearLayout>