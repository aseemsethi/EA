<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ea.start_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/table_layout_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/table_layout_row_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/table_layout_add_upd_button"
                    android:layout_width="0dip"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:text="DB" />

                <Button
                    android:id="@+id/table_layout_add_row_button"
                    android:layout_width="0dip"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="Add Row" />

                <Button
                    android:id="@+id/table_layout_delete_row_button"
                    android:layout_width="0dip"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="Del Row" />
            </TableRow>
            <TableRow
                android:id="@+id/table_layout_row_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/table_layout_add_upd_button"
                    android:layout_width="0dip"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:text="Order" />

                <Button
                    android:id="@+id/table_layout_add_row_button"
                    android:layout_width="0dip"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="TBD" />

                <Button
                    android:id="@+id/table_layout_delete_row_button"
                    android:layout_width="0dip"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="TBD" />
            </TableRow>
            <View
                android:layout_height="5dp"
                android:background="@color/colorPrimary" />
        </TableLayout>
    </ScrollView>
</LinearLayout>